if [ $# -eq 0 ] ; then
    echo "Usage: $0 BARCODE..."
    exit 2
fi

while (( "$#" )) ; do
    TAPEDIR=$1
    if [ ! -d "$TAPEDIR" ] ; then
        echo "Tape directory $TAPEDIR does not exist."
        shift
        continue
    fi

    echo "Generating tape label $TAPEDIR..."
    latexmk -interaction=nonstopmode -xelatex -quiet -cd "$TAPEDIR"/{booklet,cover}.tex

    shift
done
